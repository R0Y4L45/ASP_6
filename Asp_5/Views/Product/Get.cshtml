@using Asp_5.Entities;
@model PViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Product Market</title>
    <style>
        .container {
            margin: 24px 0 12px 0;
        }

        a {
            margin-left: 36px;
        }
    </style>
</head>
<body>
    <div>
        <form asp-action="Search" asp-controller="Product">
            <input asp-for="@Model.SearchResult" placeholder="search" />
            <button>Search</button>
        </form>
    </div>
    @foreach (var item in @Model.Products!)
    {
        <div class="container">
            <div>
                <label>Name => </label>
                <p style="display:inline-block;" class="lead">@item.Name</p>
            </div>
            <div>
                <label>Price => </label>
                <p style="display:inline-block;" class="lead">@item.Price manat</p>
            </div>
            <div>
                <label>Count => </label>
                <p style="display:inline-block;" class="lead">@item.Count</p>
            </div>
            <div>
                <label>Description => </label>
                <p style="display:inline-block;" class="lead">@item.Description</p>
            </div>
        </div>

        <a asp-controller="product" asp-action="delete" asp-route-name="@item.Name" class="link-danger">Delete</a>
    }
</body>
</html>